<div id="user_nav">
  <% if user_signed_in? %>
    Signed in as <%= current_user.email %>. Not you?
    <%= link_to "Sign out", destroy_user_session_path,:method => :delete %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path %> or
    <%= link_to "Sign in", new_user_session_path %>

  <div class="form_group">
    <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2),:class=> "btn btn-danger" %>
  </div>

  <div class="form_group">
    <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter),:class=> "btn btn-info" %>
  </div>

  <div class="form_group">
    <%= link_to "Sign in with Linkedin",user_omniauth_authorize_path(:linkedin),:class=> "btn btn-success" %>
  </div>

  <div class="form_group">
    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook),:class=> "btn btn-primary"%>
  </div>
  <% end %>
</div>
